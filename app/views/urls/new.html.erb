<div class="grid grid-cols-1">

  <div>
    <%= form_with(model: @url) do |form| %>
      <% if @url.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@url.errors.count, "error") %> prohibited this url from being saved:</h2>

          <ul>
            <% @url.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.label @url, "Enter your long link here" %>
      <%= form.text_field :long_url %>

      <div>
        <%= form.submit "Create your Link", class: "mt-2 rounded-lg py-3 px-5 bg-blue-500 text-white hover:bg-blue-600 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
